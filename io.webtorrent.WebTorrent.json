{
  "app-id": "io.webtorrent.WebTorrent",
  "branch": "stable",
  "base": "io.atom.electron.BaseApp",
  "base-version": "stable",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.26",
  "sdk": "org.gnome.Sdk",
  "command": "WebTorrent",
  "rename-icon": "webtorrent-desktop",
  "separate-locales": false,
  "finish-args": [
    "--share=ipc",
    "--socket=x11",
    "--socket=pulseaudio",
    "--share=network",
    "--device=dri",
    "--filesystem=home",
    "--talk-name=org.freedesktop.Notifications"
  ],
  "modules": [
    {
      "name": "webtorrent",
      "buildsystem": "simple",
      "build-commands": [
        "ar x webtorrent.deb",
        "tar -xf data.tar.gz",
        "cp -r usr/* /app",
        "cp -r opt/webtorrent-desktop/* /app/bin/",
        "chmod +x /app/bin/WebTorrent",
        "install -Dm644 io.webtorrent.WebTorrent.desktop /app/share/applications/io.webtorrent.WebTorrent.desktop",
        "install -Dm644 io.webtorrent.WebTorrent.appdata.xml /app/share/appdata/io.webtorrent.WebTorrent.appdata.xml"
      ],
      "cleanup": [
        "/share/doc"
      ],
      "sources": [
        {
          "type": "file",
          "only-arches": ["x86_64"],
          "url": "https://github.com/webtorrent/webtorrent-desktop/releases/download/v0.19.0/webtorrent-desktop_0.19.0-1_amd64.deb",
          "sha256": "ed69924d6bf980162f109e0d0a62ce29de706867178c3fcbe3b23f8cdc7e8e6c",
          "dest-filename": "webtorrent.deb"
        },
        {
          "type": "file",
          "only-arches": ["i386"],
          "url": "https://github.com/webtorrent/webtorrent-desktop/releases/download/v0.19.0/webtorrent-desktop_0.19.0-1_i386.deb",
          "sha256": "ecf149b50ea92597301f5f6129ba769bf00f234ef57f39b2a8473a9597fe6ca8",
          "dest-filename": "webtorrent.deb"
        },
        {
          "type": "file",
          "path": "io.webtorrent.WebTorrent.desktop"
        },
        {
          "type": "file",
          "path": "io.webtorrent.WebTorrent.appdata.xml"
        }
      ]
    }
  ]
}
